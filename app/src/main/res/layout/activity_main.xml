<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">


        <ImageView
            android:id="@+id/imageView7"
            android:layout_width="411dp"
            android:layout_height="352dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="4dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/undraw_city_life_gnpr" />

        <ImageView
            android:id="@+id/imageView9"
            android:layout_width="123dp"
            android:layout_height="116dp"
            android:layout_marginStart="1dp"
            android:layout_marginTop="290dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/iconpersonal" />

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="300dp"
            android:text="Hello Welcome"
            android:textSize="30dp"
            app:layout_constraintStart_toEndOf="@+id/imageView9"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="340dp"
            android:text="Have a nice day!"
            android:textSize="20dp"
            android:textStyle="italic"
            app:layout_constraintStart_toStartOf="@+id/tv1"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imgLogout"
            android:layout_width="59dp"
            android:layout_height="59dp"
            android:layout_marginTop="25dp"
            android:src="@drawable/logout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btSetAlarm"
            android:layout_width="348dp"
            android:layout_height="81dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="430dp"
            android:background="@drawable/custom_color"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView11"
            android:layout_width="93dp"
            android:layout_height="107dp"
            app:layout_constraintStart_toStartOf="@+id/btSetAlarm"
            app:layout_constraintTop_toTopOf="@+id/btSetAlarm"
            app:srcCompat="@drawable/alarm" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="454dp"
            android:text="Set Alarm"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toEndOf="@+id/imageView11"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btTodoList"
            android:layout_width="348dp"
            android:layout_height="81dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="540dp"
            android:background="@drawable/custom_color"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iconTodoList"
            android:layout_width="80dp"
            android:layout_height="81dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            app:layout_constraintStart_toStartOf="@+id/btTodoList"
            app:layout_constraintTop_toTopOf="@+id/btTodoList"
            app:srcCompat="@drawable/todolist" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="563dp"
            android:text="Todo List"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toEndOf="@+id/iconTodoList"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btTellStory"
            android:layout_width="348dp"
            android:layout_height="81dp"
            android:layout_marginStart="25dp"
            android:layout_marginTop="650dp"
            android:background="@drawable/custom_color"
            app:backgroundTint="@null"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/icontellStory"
            android:layout_width="88dp"
            android:layout_height="84dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="@+id/btTellStory"
            app:layout_constraintTop_toTopOf="@+id/btTellStory"
            app:srcCompat="@drawable/tellstory" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="675dp"
            android:text="Tells Stories"
            android:textColor="@color/black"
            android:textSize="25dp"
            app:layout_constraintStart_toEndOf="@+id/icontellStory"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>

