<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".SignInActivity">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="278dp"
            android:layout_height="259dp"
            android:layout_marginStart="105dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="105dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.506"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/signin" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="154dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="147dp"
            android:text="Sign In"
            android:textColor="@color/green"
            android:textSize="35dp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textviewEmail"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="329dp"
            android:layout_height="80dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="420dp"
            android:layout_marginEnd="23dp"
            android:textColorHint="@color/green"
            app:boxStrokeColor="@color/green"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:errorTextAppearance="@color/design_default_color_error"
            app:errorTextColor="@color/design_default_color_error"
            app:helperTextEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:hint="Email" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/textviewPassword"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            android:layout_width="329dp"
            android:layout_height="80dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="520dp"
            android:layout_marginEnd="23dp"
            android:textColorHint="@color/green"
            app:boxStrokeColor="@color/green"
            app:endIconMode="clear_text"
            app:errorEnabled="true"
            app:helperTextEnabled="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="329dp"
                android:layout_height="wrap_content"
                android:hint="Password"
                android:inputType="textPassword" />
        </com.google.android.material.textfield.TextInputLayout>

        <CheckBox
            android:id="@+id/checkbox_remember_me"
            android:layout_width="115dp"
            android:layout_height="21dp"
            android:layout_marginTop="600dp"
            android:backgroundTint="#2DDA93"
            android:foregroundTint="#2DDA93"
            android:text="Remember me"
            android:textColor="#6A6F7D"
            android:textColorHint="#6A6F7D"
            android:textSize="11dp"
            app:layout_constraintLeft_toLeftOf="@id/buttonSignIn"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textview_forgot_password"
            android:layout_width="98dp"
            android:layout_height="21dp"
            android:layout_marginTop="604dp"
            android:gravity="right"
            android:text="Forgot Password?"
            android:textAlignment="center"
            android:textColor="#6A6F7D"
            android:textSize="11dp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="@id/buttonSignIn"
            app:layout_constraintTop_toTopOf="parent"
            tools:ignore="RtlCompat" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonSignIn"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="329dp"
            android:layout_height="60dp"
            android:layout_marginStart="23dp"
            android:layout_marginTop="625dp"
            android:layout_marginEnd="23dp"
            android:text="SIGN IN"
            android:textColor="@color/green"
            android:textSize="20dp"
            android:textStyle="bold"
            app:backgroundTint="@color/black"
            app:cornerRadius="10dp"
            app:elevation="15dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textviewSignUp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="710dp"
            android:layout_marginEnd="124dp"
            android:text="Sign Up"
            android:textColor="@color/green"
            android:textSize="13dp"
            android:textStyle="italic"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@+id/textview_dont_have_account"
            tools:layout_editor_absoluteY="686dp" />

        <TextView
            android:id="@+id/textview_dont_have_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="125dp"
            android:layout_marginTop="710dp"
            android:text="Donâ€™t Have Account?"
            android:textColor="#6A6F7D"
            android:textSize="13dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/textviewSignUp"
            app:layout_constraintStart_toStartOf="parent"
            tools:layout_editor_absoluteY="686dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>